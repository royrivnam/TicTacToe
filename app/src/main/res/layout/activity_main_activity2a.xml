<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dell.tictactoe2.MainActivity2a"
    android:clickable="false"
    android:background="@drawable/wall3">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 1"
        android:id="@+id/t1"
        android:layout_marginTop="124dp"
        android:textSize="25sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textColor="#f1efef" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/e1"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/t1"
        android:background="@drawable/border_grey"
        android:layout_alignTop="@+id/t1"
        android:textSize="20sp"
        android:hint="NAME"
        android:textColorHint="#FFEEFE85"
        android:gravity="center_vertical|center_horizontal"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAYER 2"
        android:id="@+id/t2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/e1"
        android:textSize="25sp"
         android:textColor="#f1efef" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:id="@+id/e2"
        android:layout_alignTop="@+id/t2"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/t2"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/border_grey"
        android:hint="NAME"
        android:textColorHint="#FFEEFE85"
        android:gravity="center_vertical|center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" START "
        android:id="@+id/b1"
        android:layout_below="@+id/e2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="#f9271f"
        android:gravity="center_horizontal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  BACK  "
        android:id="@+id/b2"
        android:layout_below="@+id/b1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textStyle="bold|italic"
        android:textColor="#f9271f"
        android:textSize="25sp"
        android:gravity="center_horizontal" />
</RelativeLayout>
